{{ 'article-card.css' | asset_url | stylesheet_tag }}
{{ 'featured-blog.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign section_prefix_class = 'featured-blog'
  
  assign section_align_class = '--align-left'
  assign list_align_class = '--justify-content-start'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  if section.settings.section_text_alignment == 'center'
    assign section_align_class = '--align-center'
    assign list_align_class = '--justify-content-center'
  elsif section.settings.section_text_alignment == 'right'
    assign section_align_class = '--align-right'
    assign list_align_class = '--justify-content-end'
  endif

  if section.settings.mobile_text_alignment
    assign section_align_class_mobile = '--mobile-align-center'
  endif

  case section.settings.pagination
    when 'dots'
      assign slideshow_pagination_style = '--pagination_dots'
    when 'lines'
      assign slideshow_pagination_style = '--pagination_lines'
    when 'numbers'
      assign slideshow_pagination_style = '--pagination_numbers'
    else
      assign slideshow_pagination_style = 'none'
  endcase

  if section.settings.enable_slideshow
    assign slideshow_enable_class = 'slideshow_enable'
  endif
  
  assign blog_all_posts_count = section.settings.blog.articles_count
  assign posts_to_show = section.settings.number_of_columns_on_desktop | times: section.settings.number_of_rows
  
  assign product_image_ratio_class = ''
  case section.settings.column_image_ratio
    when 'portrait'
      assign product_image_ratio_class = '--portrait-media'
    when 'square'
      assign product_image_ratio_class = '--square-media'
    when 'landscape'
      assign product_image_ratio_class = '--landscape-media'
    else
      assign product_image_ratio_class = '--adapt-media'
  endcase
  assign section_media_size_class = product_image_ratio_class
        
  capture show_more_label
    if section.settings.show_more_button_label != blank
      echo section.settings.show_more_button_label
      else 
        echo 'templates.blogs.show_more' | t
    endif
  endcapture
-%}

{%- style -%}
  .{{ section_prefix_class }}-{{ section.id }}{
    --section-padding-top: {{ section.settings.section_top_padding }}px;
    --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;
    --desktop-columns-count: {{ section.settings.number_of_columns_on_desktop }};
  }
{%- endstyle -%}

<div class="{{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {{ section_align_class_mobile }} {{ section_align_class }} {{ section_scheme_class }} {{ slideshow_enable_class }} {{ product_image_ratio_class }}">
  <div class="container">
    <div class="{{ section_prefix_class }}_wrapper">
      {%- liquid
        unless section.settings.section_heading == blank
          render 'element-header' | elem_header_heading_tag: 'h2'
        endunless
      -%}
      <div class="{{ section_prefix_class }}_slider-wrap">
        {%- unless section.settings.enable_slideshow == false -%}
          <splide-slider
            data-drag="true"
            data-autoplay="{{ section.settings.auto_play }}"
            data-pause-on-hover="true"
            data-gap="30px"
            {% if request.design_mode == false %}
              data-type="loop"
            {% else %}
              data-type="slide"
            {% endif %}
            data-arrows="{{ section.settings.show_navigation }}"
            {% unless slideshow_pagination_style == 'none' %}
              data-pagination="true"
            {% else %}
              data-pagination="false"
            {% endunless %}
            data-per-page="1"
            data-interval="{{ section.settings.change_slides_every | times: 1000 }}"
            data-breakpoints='{"responsive": {"768": {"perPage": 2},"992": {"perPage": {{ section.settings.number_of_columns_on_desktop }}}}}'
            {% unless slideshow_pagination_style == 'none' %}
              data-pagination-style="{{ slideshow_pagination_style }}"
            {% endunless %}
          >
            <div class="splide featured-blog-slider">
              <div class="splide__track">
                <div class="splide__list">
                  {%- if section.settings.blog != blank and blog_all_posts_count > 0 -%}
                    {%- for article in section.settings.blog.articles limit: posts_to_show -%}
                      <div class="splide__slide">
                        {%- render 'post-card',
                          article: article,
                          show_image: section.settings.show_image,
                          show_date: section.settings.show_date,
                          show_author: section.settings.show_author,
                          show_excerpt: section.settings.show_excerpt,
                          show_comments: section.settings.show_comments
                        -%}
                      </div>
                    {%- endfor -%}
                    {%- else -%}
                      {%- for article in (1..10) -%}
                        <div class="splide__slide">
                          {%- render 'post-card',
                            article: article,
                            show_image: section.settings.show_image,
                            show_date: section.settings.show_date,
                            show_author: section.settings.show_author,
                            show_excerpt: section.settings.show_excerpt,
                            show_comments: section.settings.show_comments
                          -%}
                        </div>
                      {%- endfor -%}
                  {%- endif -%}
                </div>
              </div>
              {%- if section.settings.show_navigation or section.settings.pagination != 'none' -%}
                <div class="splide-controls">
                  {%- if section.settings.show_navigation -%}
                    <button class="splide__arrow splide__arrow--prev">
                      <span class="visually-hidden">{{- 'sections.slideshow.previous_slideshow' | t -}}</span>
                      {%- render 'icons-data', width: 14, height: 14, use_icon: true, icon_reference: 'arrow-left' -%}
                    </button>
                  {%- endif -%}
                  <ul class="splide__pagination" role="tablist" aria-label="{{ 'additions.slideshow.select' | t }}"></ul>
                  {%- if section.settings.show_navigation -%}
                    <button class="splide__arrow splide__arrow--next">
                      <span class="visually-hidden">{{- 'sections.slideshow.next_slideshow' | t -}}</span>
                      {%- render 'icons-data', width: 14, height: 14, use_icon: true, icon_reference: 'arrow-right' -%}
                    </button>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          </splide-slider>
          {% if section.settings.enable_show_more_button %}
            {% if blog_all_posts_count > posts_to_show %}
              <footer class="button-wrap">
                {%- render 'element-button' | element_button_label: show_more_label | element_button_link: section.settings.blog.url | elem_button_type: 'secondary' -%}
              </footer>
            {% endif %}
          {% endif %}
        {%- else -%}
          {%- render 'grid-columns',
            grid_column_blocks: section.settings.blog.articles,
            grid_column_card: 'post-card',
            grid_column_section_prefix: section_prefix_class,
            grid_column_Justify_class: list_align_class
          -%}
        {%- endunless -%}
      </div>
    </div>
  </div>
</div>

