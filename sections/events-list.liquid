{{ 'events-list.css' | asset_url | stylesheet_tag }}

{% assign section_prefix_class = 'events-list' %}

{%- style -%}
  .{{ section_prefix_class }}-{{ section.id }}{
    --section-padding-top: {{ section.settings.section_top_padding }}px;
    --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;
    --columns-count: {{ section.settings.number_of_columns_on_desktop }};
  }
{%- endstyle -%}

{% liquid
  assign section_align_class = '--align-left'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  if section.settings.section_text_alignment == 'center'
    assign section_align_class = '--align-center'
  elsif section.settings.section_text_alignment == 'right'
    assign section_align_class = '--align-right'
  endif

  if section.settings.mobile_text_alignment
    assign section_align_class_mobile = '--mobile-align-center'
  endif
%}

<div class="{{ section_prefix_class }} {{ section_scheme_class }} {{ section_prefix_class }}-{{ section.id }} {{ section_align_class }} {{ section_align_class_mobile }}">
  <div class="container">
    <div class="{{ section_prefix_class }}_wrapper">
      {%- liquid
        if section.settings.section_heading != blank or section.settings.section_description != blank
          render 'element-header' | elem_header_heading_tag: 'h2'
        endif
        
        render 'grid-columns', grid_column_blocks: section.blocks, grid_column_card: 'event', grid_column_section_prefix: section_prefix_class
      -%}
    </div>
  </div>
</div> 

{% schema %}
{
  "name": "t:sections.events_list.name",
  "tag": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "section_heading",
      "label": "t:sections.common.heading.label",
      "default": "Exciting Events"
    },
    {
      "type": "select",
      "id": "section_heading_size",
      "label": "t:sections.common.heading.size.label",
      "options": [
        {
          "value": "heading_xx_large",
          "label": "t:sections.common.heading.size.options.opt_1.label"
        },
        {
          "value": "heading_x_large",
          "label": "t:sections.common.heading.size.options.opt_2.label"
        },
        {
          "value": "heading_large",
          "label": "t:sections.common.heading.size.options.opt_3.label"
        },
        {
          "value": "heading_medium",
          "label": "t:sections.common.heading.size.options.opt_4.label"
        }
      ],
      "default": "heading_medium"
    },
    {
      "type": "inline_richtext",
      "id": "section_description",
      "label": "t:sections.common.description.label",
      "default": "Register your intrest"
    },
    {
      "type": "header",
      "content": "t:sections.common.layout.content"
    },
    {
      "type": "select",
      "id": "section_text_alignment",
      "label": "t:sections.common.text_align.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.common.text_align.options.opt_1.label"
        },
        {
          "value": "center",
          "label": "t:sections.common.text_align.options.opt_2.label"
        },
        {
          "value": "right",
          "label": "t:sections.common.text_align.options.opt_3.label"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "mobile_text_alignment",
      "label": "t:sections.common.cntr_mob.label",
      "default": false
    },
    
    {
      "type": "header",
      "content": "t:sections.common.grid.content"
    },
    {
      "type": "select",
      "id": "number_of_columns_on_desktop",
      "label": "t:sections.events_list.settings.num_col_d.label",
      "options": [
        {
          "value": "1",
          "label": "t:sections.events_list.settings.num_col_d.options.opt_1.label"
        },
        {
          "value": "2",
          "label": "t:sections.events_list.settings.num_col_d.options.opt_2.label"
        }
      ],
      "default": "2"
    },
    {
      "type": "header",
      "content": "t:sections.events_list.settings.card.content"
    },
    {
      "type": "select",
      "id": "column_heading_size",
      "label": "t:sections.common.heading.size.label",
      "options": [
        {
          "value": "heading_x_small",
          "label": "t:sections.common.heading.size.options.opt_6.label"
        },
        {
          "value": "heading_xx_small",
          "label": "t:sections.common.heading.size.options.opt_7.label"
        }
      ],
      "default": "heading_xx_small"
    },
    {
      "type": "header",
      "content": "t:sections.common.style.content"
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "default": "scheme1",
      "label": "t:sections.common.clr_scheme.label"
    },
    {
      "type": "header",
      "content": "t:sections.common.spacing.content"
    },
    {
      "type": "range",
      "id": "section_top_padding",
      "label": "t:sections.common.spacing.top_spac.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "section_bottom_padding",
      "label": "t:sections.common.spacing.bottom_spac.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "event",
      "name": "t:sections.events_list.blocks.event.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.common.image.label"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Event",
          "label": "t:sections.common.heading.label"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "t:sections.common.btn_link.button.label",
          "default": "Book your seat"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.common.btn_link.button.link.label"
        },
        {
          "type": "checkbox",
          "id": "open_new_window",
          "label": "t:sections.common.btn_link.link.new_window.label",
          "default": false
        },
        {
          "type": "text",
          "id": "location",
          "label": "t:sections.events_list.blocks.event.settings.location.label",
          "default": "Location"
        },
        {
          "type": "text",
          "id": "start_date",
          "label": "t:sections.events_list.blocks.event.settings.start_date.label",
          "default": "Start date"
        },
        {
          "type": "text",
          "id": "end_date",
          "label": "t:sections.events_list.blocks.event.settings.end_date.label",
          "default": "End date"
        },
        {
          "type": "text",
          "id": "organizer",
          "label": "t:sections.events_list.blocks.event.settings.organizer.label",
          "default": "Organizer"
        },
        {
          "type": "text",
          "id": "details_link",
          "label": "t:sections.events_list.blocks.event.settings.details_link.label",
          "default": "#"
        },
        {
          "type": "color_scheme",
          "id": "block_color_scheme",
          "default": "scheme2",
          "label": "t:sections.common.clr_scheme.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Events list",
      "blocks": [
        {
          "type": "event"
        },
        {
          "type": "event"
        },
        {
          "type": "event"
        },
        {
          "type": "event"
        }
      ]
    }
  ]
}
{% endschema %}
