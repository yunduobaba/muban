{{ 'rich-text.css' | asset_url | stylesheet_tag }}

{% assign section_prefix_class = 'rich-text' %}

{%- style -%}
  .{{ section_prefix_class }}-{{ section.id }}{
    --section-padding-top: {{ section.settings.section_top_padding }}px;
    --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;
  }
{%- endstyle -%}

{% liquid
  assign section_align_class = '--align-left'
  assign buttons_align_class = '--justify-content-start'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  if section.settings.section_text_alignment == 'center'
    assign section_align_class = '--align-center'
    assign buttons_align_class = '--justify-content-center'
  elsif section.settings.section_text_alignment == 'right'
    assign section_align_class = '--align-right'
    assign buttons_align_class = '--justify-content-end'
  endif

  if section.settings.section_background_full
    assign section_scheme_class_full = section_scheme_class
    assign section_side_spacing_cont = ''
  else
    assign section_scheme_class_cont = section_scheme_class
    assign section_side_spacing_cont = 'section_side_spacing_cont'
  endif

  if section.settings.mobile_text_alignment
    assign section_align_class_mobile = '--mobile-align-center'
  endif

  case section.settings.section_corner_radius
    when 'top_corners_radius'
      assign section_corners_radius = 'top_corners_radius'
    when 'bottom_corners_radius'
      assign section_corners_radius = 'bottom_corners_radius'
    when 'both_corners_radius'
      assign section_corners_radius = 'both_corners_radius'
    when 'no_corners_radius'
      assign section_corners_radius = ''
  endcase
%}

<div class="{{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {{ section_align_class_mobile }} {{ section_align_class }} {{ section_scheme_class_full }} {{ section_corners_radius }}">
  <div class="container">
    <div class="{{ section_prefix_class }}_wrapper {{ section_scheme_class_cont }} {{ section_side_spacing_cont }}">
      {%- for block in section.blocks %}
        {%- case block.type -%}
          {%- when 'subheading' -%}
            <strong
              class="{{ section_prefix_class }}_subheading subheading mty"
              {{ block.shopify_attributes }}
              style="--block-spacing: {{ block.settings.block_spacing }}px"
            >
              {{- block.settings.heading -}}
            </strong>
          {%- when 'heading' -%}
            {%- render 'element-heading' | elem_heading_tag: 'h2' | elem_heading_parent: section_prefix_class | elem_heading_text: block.settings.heading | elem_heading_size: block.settings.heading_size | elem_heading_block: block | elem_heading_spacing: block.settings.block_spacing | elem_heading_custom_class: 'mty' -%}
          {%- when 'description' -%}
            <div
              class="{% unless block.settings.block_text_size == 'body' %} text-subtitle {% endunless %} {{ section_prefix_class }}_description mty"
              {{ block.shopify_attributes }}
              style="--block-spacing: {{ block.settings.block_spacing }}px"
            >
              {{ block.settings.heading }}
            </div>
          {%- when 'buttons' -%}
            <footer
              class="buttons-wrap {{ buttons_align_class }} mty"
              {{ block.shopify_attributes }}
              style="--block-spacing: {{ block.settings.block_spacing }}px"
            >
              {%- liquid
                if block.settings.button_label_1 != blank
                  render 'element-button' | element_button_label: block.settings.button_label_1 | element_button_link: block.settings.button_link_1 | element_button_new_window: block.settings.open_new_window_1
                endif

                if block.settings.button_label_2 != blank
                  render 'element-button' | element_button_label: block.settings.button_label_2 | element_button_link: block.settings.button_link_2 | element_button_new_window: block.settings.open_new_window_2
                endif

                if block.settings.button_label_3 != blank
                  render 'element-button' | element_button_label: block.settings.button_label_3 | element_button_link: block.settings.button_link_3 | element_button_new_window: block.settings.open_new_window_3
                endif
              -%}
            </footer>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
