  "tag": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "range",
      "id": "desktop_height",
      "label": "t:sections.banner_slideshow.settings.d_height.label",
      "min": 400,
      "max": 600,
      "step": 10,
      "default": 580,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "t:sections.banner_slideshow.settings.m_height.label",
      "min": 150,
      "max": 400,
      "step": 10,
      "default": 400,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "t:sections.common.style.content"
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "default": "scheme1",
      "label": "t:sections.common.clr_scheme.label"
    },
    {
      "type": "header",
      "content": "t:sections.common.slideshow.content"
    },
    {
      "type": "checkbox",
      "id": "auto_play",
      "label": "t:sections.common.slideshow.auto_play.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "t:sections.common.slideshow.show_arrows.label",
      "default": true,
      "info": "t:sections.common.slideshow.show_arrows.info"
    },
    {
      "type": "select",
      "id": "pagination",
      "label": "t:sections.common.slideshow.show_nav.label",
      "options": [
