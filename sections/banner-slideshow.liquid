{{ 'banner-slideshow.css' | asset_url | stylesheet_tag }}

{% assign section_prefix_class = 'banner-slideshow' %}

{%- style -%}
  .{{ section_prefix_class }}-{{ section.id }}{
    --mobile-row-height: {{ section.settings.mobile_height }}px;
    --desktop-row-height: {{ section.settings.desktop_height }}px;
    --section-padding-top: {{ section.settings.section_top_padding }}px;
    --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;
  }
{%- endstyle -%}

{% liquid
  case section.settings.pagination
    when 'dots'
      assign slideshow_pagination_style = '--pagination_dots'
    when 'lines'
      assign slideshow_pagination_style = '--pagination_lines'
    when 'numbers'
      assign slideshow_pagination_style = '--pagination_numbers'
    else
      assign slideshow_pagination_style = 'none'
  endcase

  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'
%}

<div class="{{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {{ section_scheme_class }}">
  <div class="container">
    <div class="{{ section_prefix_class }}_wrapper">
      <splide-slider
        data-drag="true"
        data-autoplay="{{ section.settings.auto_play }}"
        data-pause-on-hover="true"
        data-gap="30px"
        {% if request.design_mode == false %}
          data-type="loop"
        {% else %}
          data-type="slide"
        {% endif %}
        {% unless slideshow_pagination_style == 'none' %}
          data-pagination="true"
        {% else %}
          data-pagination="false"
        {% endunless %}
        data-arrows="{{ section.settings.show_navigation }}"
        data-per-page="1"
        data-interval="{{ section.settings.change_slides_every | times: 1000 }}"
        {% unless slideshow_pagination_style == 'none' %}
          data-pagination-style="{{ slideshow_pagination_style }}"
        {% endunless %}
      >
        <div class="splide {{ section_prefix_class }}_slider">
          <div class="splide__track">
            <div class="splide__list">
              {%- for block in section.blocks -%}
                {% liquid
                  assign block_scheme_class = block.settings.block_color_scheme | prepend: 'scheme--'

                  assign block_align_class = '--align-left'
                  if block.settings.block_text_alignment == 'center'
                    assign block_align_class = '--align-center'
                    assign buttons_align_class = '--justify-content-center'
                  elsif block.settings.block_text_alignment == 'right'
                    assign block_align_class = '--align-right'
                    assign buttons_align_class = '--justify-content-end'
                  endif
                  if block.settings.mobile_text_alignment
                    assign block_align_class_mobile = '--mobile-align-center'
                  endif

                  assign block_content_align_class = '--content-top'
                  if block.settings.block_content_alignment == 'middle'
                    assign block_content_align_class = '--content-middle'
                  elsif block.settings.block_content_alignment == 'bottom'
                    assign block_content_align_class = '--content-bottom'
                  endif

                  assign block_order_align_class = '--order-left'
                  if block.settings.block_content_order == 'center'
                    assign block_order_align_class = '--order-center'
                  elsif block.settings.block_content_order == 'right'
                    assign block_order_align_class = '--order-right'
                  endif

                  capture block_position_align_class
                    if block.settings.block_content_position == 'center'
                      echo '--position-center'
                      elsif block.settings.block_content_position == 'right'
                        echo '--position-right'
                      else
                        echo '--position-left'
                    endif
                  endcapture
                %}
                <div
                  class="splide__slide {{ section.id }}-{{ block.id }} {{ block_align_class }} {{ block_align_class_mobile }} {{ block_content_align_class }} {{ block_order_align_class }} {{ block_scheme_class }} {{ block_position_align_class }}"
                  {% if block.settings.pagination_text != blank %}
                    data-slide-title="{{ block.settings.pagination_text }}"
                  {% endif %}
                  {{ block.shopify_attributes }}
                >
                  <article class="{{ section_prefix_class }}_grid collage-grid">
                    {% if block.settings.image_i != blank %}
                      <div class="{{ section_prefix_class }}_img {{ section_prefix_class }}_img--i {{ section_prefix_class }}_col">
                        {{-
                          block.settings.image_i.src |
                          image_url: width: 840 |
                          image_tag: class: 'image-class', alt: '', widths: '540, 840', sizes: '(max-width: 767px) 540vw, 840vw', loading: 'eager' |
                          escape
                        -}}
                      </div>
                    {% endif %}
                    <div class="{{ section_prefix_class }}_col {{ section_prefix_class }}_description" style="--max-content-width: {{ block.settings.max_content_width }}%">
                      {% if block.settings.image_iii != blank %}
                        <div class="{{ section_prefix_class }}_img {{ section_prefix_class }}_img--iii {% if block.settings.remove_overlay %}{{ section_prefix_class }}_remove-overlay {% endif %}" style="--overlay-opacity: {{ block.settings.bg_overlay_opac }}%;">
                          {{-
                            block.settings.image_iii.src |
                            image_url: width: 1620 |
                            image_tag: class: 'image-class', alt: '', widths: '840, 1620', sizes: '(max-width: 767px) 840vw, 1620vw', loading: 'eager' |
                            escape
                          -}}
                        </div>
                      {% endif %}
                      <div class="{{ section_prefix_class }}_description-wrap">
                        <div class="{{ section_prefix_class }}_scroll-wrap">
                          {% if block.settings.badge_text != blank %}
                            <strong class="{{ section_prefix_class }}_bage mty">{{ block.settings.badge_text }}</strong>
                          {% endif %}
                          {% liquid
                            if block.settings.heading != blank
                              render 'element-heading' | elem_heading_tag: 'h1' | elem_heading_parent: section_prefix_class | elem_heading_text: block.settings.heading | elem_heading_size: block.settings.heading_size | elem_heading_custom_class: 'mty'
                            endif
                          %}
                          {% if block.settings.description != blank %}
                            <p class="mty">{{ block.settings.description }}</p>
                          {% endif %}
                          {% if block.settings.button_label_i != blank or block.settings.button_label_ii != blank %}
                            <div class="buttons-wrap {{ buttons_align_class }}">
                              {% liquid
                                if block.settings.button_label_i != blank
                                  render 'element-button' | element_button_label: block.settings.button_label_i | element_button_link: block.settings.link_i | element_button_icon: false | element_button_new_window: block.settings.open_new_window
                                endif
                              %}
                              {% if block.settings.button_label_ii != blank %}
                                <a
                                  class="{{ section_prefix_class }}_link"
                                  {% if block.settings.open_new_windowii %}
                                    target="_blank"
                                  {% endif %}
                                  {% if block.settings.link_ii == blank %}
                                    aria-disabled="true"
                                    {% else %}
                                      href="{{ block.settings.link_ii }}"
                                  {% endif %}
                                >
                                  {{ block.settings.button_label_ii }}
                                  {% liquid
                                    if settings.show_buttons_icon
                                      render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'caret-right'
                                    endif
                                  %}
                                </a>
                              {% endif %}
                            </div>
                          {% endif %}
                        </div>
                      </div>
                    </div>
                    {% if block.settings.image_ii != blank %}
                      <div class="{{ section_prefix_class }}_img {{ section_prefix_class }}_img--ii {{ section_prefix_class }}_col">
                        {{-
                          block.settings.image_ii.src |
                          image_url: width: 840 |
                          image_tag: class: 'image-class', alt: '', widths: '540, 840', sizes: '(max-width: 767px) 540vw, 840vw', loading: 'eager' |
                          escape
                        -}}
                      </div>
                    {% endif %}
                  </article>
                </div>
              {%- endfor -%}
            </div>
          </div>
          {%- if section.settings.show_navigation or section.settings.pagination != 'none' -%}
            <div class="splide-controls">
              {%- if section.settings.show_navigation -%}
                <button class="splide__arrow splide__arrow--prev">
                  <span class="visually-hidden">{{- 'sections.slideshow.previous_slideshow' | t -}}</span>
                  {%- render 'icons-data', width: 14, height: 14, use_icon: true, icon_reference: 'arrow-left' -%}
                </button>
              {%- endif -%}
              <ul class="splide__pagination" role="tablist" aria-label="{{ 'additions.slideshow.select' | t }}"></ul>
              {%- if section.settings.show_navigation -%}
                <button class="splide__arrow splide__arrow--next">
                  <span class="visually-hidden">{{- 'sections.slideshow.next_slideshow' | t -}}</span>
                  {%- render 'icons-data', width: 14, height: 14, use_icon: true, icon_reference: 'arrow-right' -%}
                </button>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      </splide-slider>
    </div>
  </div>
</div>

{% schema %}
{
