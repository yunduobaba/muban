          "value": "none",
          "label": "t:sections.common.slideshow.show_nav.options.opt_1.label"
        },
        {
          "value": "dots",
          "label": "t:sections.common.slideshow.show_nav.options.opt_2.label"
        },
        {
          "value": "lines",
          "label": "t:sections.common.slideshow.show_nav.options.opt_3.label"
        },
        {
          "value": "numbers",
          "label": "t:sections.common.slideshow.show_nav.options.opt_4.label"
        }
      ],
      "default": "lines"
    },
    {
      "type": "range",
      "id": "change_slides_every",
      "label": "t:sections.common.slideshow.interval.label",
      "min": 2,
      "max": 9,
      "step": 1,
      "default": 5,
      "unit": "s",
      "info": "t:sections.common.slideshow.interval.info"
    },
    {
      "type": "header",
      "content": "t:sections.common.spacing.content"
    },
    {
      "type": "range",
      "id": "section_top_padding",
      "label": "t:sections.common.spacing.top_spac.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "section_bottom_padding",
      "label": "t:sections.common.spacing.bottom_spac.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "name": "t:sections.banner_slideshow.blocks.slide.name",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_i",
          "label": "t:sections.banner_slideshow.blocks.slide.settings.img_1.label",
          "info": "t:sections.banner_slideshow.blocks.slide.settings.img_1.info"
        },
        {
          "type": "image_picker",
          "id": "image_ii",
          "label": "t:sections.banner_slideshow.blocks.slide.settings.img_2.label",
          "info": "t:sections.banner_slideshow.blocks.slide.settings.img_1.info"
        },
        {
          "type": "image_picker",
          "id": "image_iii",
          "label": "t:sections.banner_slideshow.blocks.slide.settings.img_3.label"
        },
        {
          "type": "range",
          "id": "bg_overlay_opac",
          "label": "t:sections.banner_slideshow.blocks.slide.settings.img_3.overlay_opac.label",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 30,
          "unit": "%"
        },
        {
          "type": "checkbox",
          "id": "remove_overlay",
          "label": "t:sections.banner_slideshow.blocks.slide.settings.img_3.overlay_opac.remove_overlay.label",
          "default": false
        },
        {
          "type": "header",
          "content": "t:sections.common.layout.content"
        },
        {
          "type": "select",
          "id": "block_content_order",
          "label": "t:sections.banner_slideshow.blocks.slide.settings.cntnt_order.label",
          "info": "t:sections.banner_slideshow.blocks.slide.settings.cntnt_order.info",
          "options": [
