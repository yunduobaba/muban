{{ 'logo-card.css' | asset_url | stylesheet_tag }}
{{ 'logo-list.css' | asset_url | stylesheet_tag }}

{% assign section_prefix_class = 'logo-list' %}

{%- style -%}
  .{{ section_prefix_class }}-{{ section.id }}{
    --section-padding-top: {{ section.settings.section_top_padding }}px;
    --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;
    --columns-count: {{ section.settings.number_of_columns_on_desktop }};
  }
{%- endstyle -%}

{% liquid
  assign section_align_class = '--desktop-align-center'
  assign section_align_class_mobile = '--mobile-align-center'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'
%}

<div class="{{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {{ section_align_class_mobile }} {{ section_align_class }} {{ section_scheme_class }}">
  <div class="{% unless section.settings.full_screen_width == true %}container{% endunless %}">
    <div class="{{ section_prefix_class }}_wrapper">
      {% unless section.settings.enable_marquee == false %}
        {% liquid
          capture marquee_direction
            if section.settings.marquee_direction == 'marquee_forward'
              echo 'forward'
              else
                echo 'backward'
            endif
          endcapture
        %}
        <marquee-component data-direction="{{ marquee_direction }}" data-pause-on-hover="{{ section.settings.marquee_on_hover }}" data-speed="{{ section.settings.marquee_speed }}">
          <div class="marquee-component">
            {%- for block in section.blocks -%}
              <div class="marquee-component_col">
                {%- render 'logo-card', logo_card_block: block -%}
              </div>
            {%- endfor -%}
          </div>
        </marquee-component>
      {% else %}
        {%- render 'grid-columns',
          grid_column_blocks: section.blocks,
          grid_column_card: 'logos',
          grid_column_section_prefix: section_prefix_class
        -%}
      {% endunless %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.logos_list.name",
  "tag": "aside",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.common.grid.content"
    },
    {
      "type": "range",
      "id": "number_of_columns_on_desktop",
      "label": "t:sections.common.grid.num_col_d.label",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 6,
      "info": "t:sections.logos_list.settings.num_col_d.info"
    },
    {
      "type": "header",
      "content": "t:sections.common.style.content"
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "default": "scheme1",
      "label": "t:sections.common.clr_scheme.label"
    },
    {
      "type": "checkbox",
      "id": "enable_grayscale",
      "label": "t:sections.logos_list.settings.enable_grayscale.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "full_screen_width",
      "label": "t:sections.logos_list.settings.full_screen.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.common.scroll.content"
    },
    {
      "type": "checkbox",
      "label": "t:sections.common.scroll.label",
      "id": "enable_marquee",
      "default": true
    },
    {
      "type": "range",
      "id": "marquee_speed",
      "label": "t:sections.common.scroll.settings.speed.label",
      "min": 1,
      "max": 30,
      "step": 1,
      "default": 15,
      "unit": "sec"
    },
    {
      "type": "select",
      "id": "marquee_direction",
      "label": "t:sections.common.scroll.settings.direction.label",
      "options": [
        {
          "value": "marquee_backward",
          "label": "t:sections.common.scroll.settings.direction.options.opt_1.label"
        },
        {
          "value": "marquee_forward",
          "label": "t:sections.common.scroll.settings.direction.options.opt_2.label"
        }
      ],
      "default": "marquee_backward"
    },
    {
      "type": "checkbox",
      "label": "t:sections.common.scroll.settings.on_hover.label",
      "id": "marquee_on_hover",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.common.spacing.content"
    },
    {
      "type": "range",
      "id": "section_top_padding",
      "label": "t:sections.common.spacing.top_spac.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "section_bottom_padding",
      "label": "t:sections.common.spacing.bottom_spac.label",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "name": "t:sections.logos_list.blocks.logo.name",
      "type": "logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.common.image.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.logos_list.name",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}
